{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Node Functions",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "preLaunchTask": "func: host start"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug sandbox",
      "program": "index",
      "args": ["${input:sandboxCodeSelection}"],
      "cwd": "${workspaceRoot}/sandbox"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug DIRECT doDailyStatsPr",
      "program": "index",
      "args": ["2:doDailyStatsPr"],
      "cwd": "${workspaceRoot}/sandbox"
    },
  ],
  "inputs": [
    {
      "id": "sandboxCodeSelection",
      "type": "pickString",
      "options": [
        "1:CovidEquityData",
        "2:doDailyStatsPr",
        "3:doTranslationPrUpdate",
        "4:doWeeklyUpdatePrs",
        "5:CovidNewsFeed"
      ],
      "description": "Select code to debug"
    }
  ]
}